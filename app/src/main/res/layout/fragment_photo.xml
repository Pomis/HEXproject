<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_add_photo"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_dashed"
    android:layout_margin="16dp"

    tools:context="pomis.app.dressup.fragments.PhotoFragment">

    <ImageView
        android:id="@+id/iv_photos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/invalid_name" />

    <TextView
        android:id="@+id/tv_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_photos"
        android:layout_centerHorizontal="true"
        android:text="Add your favourite look"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:textColor="@color/camel"
        android:textSize="32dp"
         />


    <ImageView
        android:id="@+id/iv_test_bg"
        android:layout_width="match_parent"
        android:scaleX="0.1"
        android:scaleY="0.1"
        android:layout_height="match_parent" />

</RelativeLayout>
